{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar e Executar C",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${workspaceFolder}/src/*.c",
                "-o",
                "${workspaceFolder}/bin/bancario.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Tarefa gerada pelo usu√°rio."
        },
        {
            "label": "Executar Programa",
            "type": "shell",
            "command": "cmd /c start ${workspaceFolder}/bin/bancario.exe",
            "dependsOn": ["Compilar e Executar C"],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            }
        }
    ]
}